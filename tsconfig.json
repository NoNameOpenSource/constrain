{
    "extends": "@tsconfig/node16/tsconfig.json",
    "compileOnSave": true,
    "compilerOptions": {
        "lib": ["es2021", "dom"],
        "esModuleInterop": true,
        "checkJs": false,
        "allowJs": false,
        "strict": true,
        "useUnknownInCatchVariables": false,
        "outDir": "dist",
        "declaration": true,
        "declarationDir": "types",
        "removeComments": false,
        "sourceMap": true
    },
    "include": ["src"]
}
